<% content_for :body_content_title do %>
  <%= @package_order.number %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Id</h1>
    <p>
      <%=raw @package_order.id %>
    </p>
  </section>
  <section>
    <h1>Number</h1>
    <p>
      <%=raw @package_order.number %>
    </p>
  </section>
  <section>
    <h1>Out Date</h1>
    <p>
      <%=raw @package_order.out_date %>
    </p>
  </section>
  <section>
    <h1>Return Date</h1>
    <p>
      <%=raw @package_order.return_date %>
    </p>
  </section>
  <section>
    <h1>People</h1>
    <p>
      <%=raw @package_order.people %>
    </p>
  </section>
  <section>
    <h1>Travel Content</h1>
    <p>
      <% if @package_order.travel_content.present? %>
        <%= link_to 'travel_content', @package_order.travel_content.url %>
      <% else %>
        travel_content
      <% end %>
    </p>
  </section>
  <section>
    <h1>Price1</h1>
    <p>
      <%=raw @package_order.price1 %>
    </p>
  </section>
  <section>
    <h1>Price2</h1>
    <p>
      <%=raw @package_order.price2 %>
    </p>
  </section>
  <section>
    <h1>Price3</h1>
    <p>
      <%=raw @package_order.price3 %>
    </p>
  </section>
  <section>
    <h1>Price4</h1>
    <p>
      <%=raw @package_order.price4 %>
    </p>
  </section>
  <section>
    <h1>Out Traffic</h1>
    <p>
      <%=raw @package_order.out_traffic %>
    </p>
  </section>
  <section>
    <h1>Return Traffic</h1>
    <p>
      <%=raw @package_order.return_traffic %>
    </p>
  </section>
  <section>
    <h1>Cost</h1>
    <p>
      <%=raw @package_order.cost %>
    </p>
  </section>
  <section>
    <h1>Package Ornot</h1>
    <p>
      <%=raw @package_order.package_ornot %>
    </p>
  </section>
  <section>
    <h1>Sales Name</h1>
    <p>
      <%=raw @package_order.sales_name %>
    </p>
  </section>
  <section>
    <h1>Sales Time</h1>
    <p>
      <%=raw @package_order.sales_time %>
    </p>
  </section>
  <section>
    <h1>Operation</h1>
    <p>
      <%=raw @package_order.operation %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="package_orders">
      <% @package_orders.each do |package_order| %>
        <li>
          <%= link_to package_order.number, refinery.package_orders_package_order_path(package_order) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
