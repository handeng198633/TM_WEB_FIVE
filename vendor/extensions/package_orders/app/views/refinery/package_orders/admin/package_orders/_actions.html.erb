<ul>
  <% if ::Refinery::PackageOrders::Admin::PackageOrdersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.package_orders_admin_package_orders_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_package_orders_admin_package_order_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::PackageOrders::Admin::PackageOrdersController.sortable? && ::Refinery::PackageOrders::PackageOrder.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.package_orders_admin_package_orders_path,
                     t('.reorder', what:  "Package Orders"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.package_orders_admin_package_orders_path,
                      t('.reorder_done', what: "Package Orders"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
