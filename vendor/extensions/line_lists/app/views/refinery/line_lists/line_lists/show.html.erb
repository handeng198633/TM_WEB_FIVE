<% content_for :body_content_title do %>
  <%= @line_list.group_number %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Line</h1>
    <p>
      <%=raw @line_list.line_id %>
    </p>
  </section>
  <section>
    <h1>Group Number</h1>
    <p>
      <%=raw @line_list.group_number %>
    </p>
  </section>
  <section>
    <h1>Last Day</h1>
    <p>
      <%=raw @line_list.last_day %>
    </p>
  </section>
  <section>
    <h1>Line Name</h1>
    <p>
      <%=raw @line_list.line_name %>
    </p>
  </section>
  <section>
    <h1>Line Info</h1>
    <p>
      <%=raw @line_list.line_info %>
    </p>
  </section>
  <section>
    <h1>Travel Content</h1>
    <p>
      <%=raw @line_list.travel_content %>
    </p>
  </section>
  <section>
    <h1>Picture</h1>
    <p>
      <% if @line_list.picture.present? %>
        <%= link_to 'picture', @line_list.picture.url %>
      <% else %>
        picture
      <% end %>
    </p>
  </section>
  <section>
    <h1>Document</h1>
    <p>
      <% if @line_list.document.present? %>
        <%= link_to 'document', @line_list.document.url %>
      <% else %>
        document
      <% end %>
    </p>
  </section>
  <section>
    <h1>Price</h1>
    <p>
      <%=raw @line_list.price %>
    </p>
  </section>
  <section>
    <h1>Record Person</h1>
    <p>
      <%=raw @line_list.record_person %>
    </p>
  </section>
  <section>
    <h1>Sales Ornot</h1>
    <p>
      <%=raw @line_list.sales_ornot %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="line_lists">
      <% @line_lists.each do |line_list| %>
        <li>
          <%= link_to line_list.group_number, refinery.line_lists_line_list_path(line_list) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
