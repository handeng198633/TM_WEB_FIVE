<%= form_for [refinery, :line_lists_admin, @line_list] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @line_list,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :line_id -%>
    <%= f.number_field :line_id -%>
  </div>

  <div class='field'>
    <%= f.label :group_number -%>
    <%= f.text_field :group_number -%>
  </div>

  <div class='field'>
    <%= f.label :last_day -%>
    <%= f.number_field :last_day -%>
  </div>

  <div class='field'>
    <%= f.label :line_name -%>
    <%= f.text_field :line_name -%>
  </div>

  <div class='field'>
    <%= f.label :line_info -%>
    <%= f.text_field :line_info -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:travel_content],
                :object => "line_lists/line_list" -%>
  </div>

  <div class='field'>
    <%= f.label :picture -%>
    <%= render '/refinery/admin/resource_picker',
               :f => f,
               :field => :picture_id,
               :resource => @line_list.picture -%>
  </div>

  <div class='field'>
    <%= f.label :document -%>
    <%= render '/refinery/admin/resource_picker',
               :f => f,
               :field => :document_id,
               :resource => @line_list.document -%>
  </div>

  <div class='field'>
    <%= f.label :price -%>
    <%= f.text_field :price -%>
  </div>

  <div class='field'>
    <%= f.label :record_person -%>
    <%= f.text_field :record_person -%>
  </div>

  <div class='field'>
    <%= f.label :sales_ornot -%>
    <%= f.text_field :sales_ornot -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.line_lists.admin.line_lists.line_list'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @line_list.group_number) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
